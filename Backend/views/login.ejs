<!DOCTYPE html>
<html lang="en">
    <%- include("partials/_headerLinks.ejs", {title: 'Admin Login'}) %>
<body class="hold-transition login-page">
<div class="login-box">
  <!-- /.login-logo -->
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <!-- <a href="#" class="h1"><b>SCANZU</b></a> -->
      <img src="/imgs/Logo.png" class="img-fluid" alt="Logo">
    </div>
    <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form>
        <div class="input-group mb-3">
          <input type="email" class="form-control" placeholder="Email" id="email_input" required name="email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Password" id="password_input" required name="password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
<!-- /.login-box -->

<!-- jQuery -->

<%- include("partials/_scripts.ejs") %>
<script>
  $(document).ready(function() {
    // When the form is submitted
    $('form').submit(function(event) {
        // Prevent the default form submission behavior
        event.preventDefault();

        // Get the values of email and password inputs
        var email = $('#email_input').val();
        var password = $('#password_input').val();

        // For example, you can make an AJAX request to submit the form data
        $.ajax({
            url: '/admin/userLogin',
            method: 'POST',
            data: {
                email: email,
                password: password
            },
            success: function(response) {
                // Handle success
               return window.location.replace('/admin/dashboard')
            },
            error: function(xhr, status, error) {
               alert('Wrong Credential!')
            }
        });
    });
});

</script>
</body>
</html>
